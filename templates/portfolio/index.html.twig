{% extends 'base.html.twig' %}

{% block title %}Mon Portfolio
{% endblock %}

{% block body %}
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">

	<section class="hero-section">
		<div class="card-grid">
			{% for portfolio in portfolios %}
				<a class="card" href="#">
					<div class="card__background" style="#">{{portfolio.imagePath}}</div>
					<div class="card__content">
						<p class="card__category">{{portfolio.name}}</p>
						<h3 class="card__heading">{{portfolio.description}}</h3>

			{% endfor %}
				</div>
			</a>

		</div>

	</section>

{% endblock %}
